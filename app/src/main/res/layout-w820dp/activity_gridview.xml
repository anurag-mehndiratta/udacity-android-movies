<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#f0f0f0">

    <!-- This fragment displays the left pane with movie list -->
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_grid"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <!-- This fragment displays the right pane with movie details -->
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_movie_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar_parent"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</LinearLayout>